{
	"$schema": "http://json-schema.org/draft-06/schema#",
	"$id": "http://something.com/ref-schema.json",
	"title": "Person",
    "type": "object",
	"properties": {
		"name": {"$ref": "#/definitions/nameType"},
		"age":  {"$ref": "#ageTypeId"},
		"addr": {"$ref": "#addrTypeId"}
	},
	"definitions": {
        "ageType": {
            "$id": "#ageTypeId",
            "type": "number"
        },
		"nameType": {
            "type": "string"
        },
		"addrType": {
			"$id": "#addrTypeId",
			"type": "object",
			"properties": {
				"city": {"type": "string"},
				"zip": {"type": ["number", "string"]}
			}
		}
    },
	"required": ["name"]	
}