{
	"$schema": "http://json-schema.org/draft-06/schema#",
	"$id": "http://something.com/json-schema.json",
	"title": "Person",
    "type": "object",
	"properties": {
		"id": {"type": ["string", "number"]},
		"name": { "type": "string" },
		"age": { "type": "number" },
		"weight": {"type": ["number", "null"]},
		"address": {
			"type": "object",
			"properties": {
				"city": { "type": "string" },
				"code": { "type": "number" }
			}
		},
		"hobby": {
			"type": "object",
			"properties": {
				"name": { "type": "string" }
			}
		}
	},
	"required": ["name", "age", "address"]	
}